{
  "name": "cs-website",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node app.js",
    "build-css": "node-sass --include-path scss assets/scss/main.scss public/css/main.css",
    "build-js": "webpack -d",
    "build-js-min": "webpack -p",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "watch-js": "webpack -d --watch",
    "watch-server": "nodemon app.js",
    "dev-windows": "start npm run watch-css && start npm run watch-server && start npm run watch-js",
    "dev-linux": "npm run watch-css & npm run watch-server & npm run watch-js",
    "deploy": "git checkout stage && git pull origin stage && git rebase origin/dev && npm run build-css && git add public/css/main.css -f && git commit -m \"Build CSS\" && git push origin stage && git checkout dev"
  },
  "dependencies": {
    "body-parser": "~1.15.1",
    "bootstrap": "^4.0.0-alpha.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.2.0",
    "dotenv": "^2.0.0",
    "express": "~4.13.4",
    "jade": "~1.11.0",
    "jquery": "^3.0.0",
    "morgan": "~1.7.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "node-sass": "^3.8.0",
    "nodemon": "^1.9.2",
    "webpack": "^1.13.1"
  }
}
