extends layout

block content
	#index-page.content
		#top-news.row
			.col-lg-12
				h1 Top News
				span March 21, 2:28am
				.row.card
					.col-lg-12
						h2 Project Updates
						h4 <a href="/projects/9">Club App</a>
						span Making great progress in design and planning development as well as scheduling workshops to learn the technology! Finishing up design phase to move on to create more <a href"https://github.com/SRJC-Computer-Science-Club/cs-app-react-native/issues">GitHub issues</a>.
						h4 <a href="/projects/5">Line Follower</a>
						span Crunch time! Commits and completing classes at the workshops are boosting this project!
		hr
		#join.row
			.col-sm-12
				.row.card
					.col-sm-12
						h1 WANT TO JOIN THE CLUB
				.row
					.col-sm-6.card
						a(href='#news-bar').col-sm-12
							img.img-fluid(src='images/icons/maggini-icon-bnr.png')
							h3 ATTEND A MEETING
					.col-sm-6.card
						a(href='join').col-sm-12
							img.img-fluid(src='images/icons/slack-icon-bnr.png')
							h3 SIGNUP FOR SLACK
				.row.card
					.col-sm-12
						h2 DONE!
						p once joined, you will be informed about <a href='/projects'>projects</a>
						p.small no real requirments to join, internet is a plus though :)
		hr
		#project-spotlight.row(ng-controller="ProjectListController")
			.col-lg-12
				h1 Project Spotlight
				each project in projects
					include ./partials/homepage/_homepage_project_cell
		hr
