extends layout

block content
  #join-page.content
    .row.card
      .col-md-offset-1.col-md-8
        h1 Signing Up for Slack
        form(action='join/submit')
          .form-group
            label(for='email') Name
            input.form-control(id='email' type='text' for='name' name='name' placeholder='Johny Appleseed')
          .form-group
            label(for='contact') Your Contact
            input.form-control(id='contact' type='text' for='contact' name='contact' placeholder='e.g. example@domain.com, Facebook Profile URL, etc.')
          .form-group
            label(for='message') Message (optional, but helpful)
            textarea.form-control(id='message' name='message' rows='5')
          input.btn.btn-success.btn-lg(type='submit' name='submit' value='Send Message')
