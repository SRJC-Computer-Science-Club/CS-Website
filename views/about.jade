extends layout

block content
  #about-page.content
    .row
      .col-xs-12
        - var content = [{header: "What we do", body: "placeholder", image: "http://placehold.it/350x200"}, {header: "What is the scope of this club", body: "A lot of things", image: "http://placehold.it/350x200"}, {header: "Our phylosophy", body: "Something catchy to say", image: "http://placehold.it/350x200"}];
        each row, i in content
          if (i % 2 != 1)
            .row.card.context-left
              .col-xs-12
                .col-lg-4
                  .thumb(style="height: 200px;")
                    img(src=row.image)
                .col-lg-8
                  h1= row.header
                  p.paragraph-block= row.body
          else
            .row.card.context-right
              .col-xs-12
                .col-lg-4.hidden-lg-up
                  .thumb(style="height: 200px;")
                    img(src=row.image)
                .col-lg-8
                  h1= row.header
                  p.paragraph-block= row.body
                .col-lg-4.hidden-md-down
                  .thumb(style="height: 200px;")
                    img(src=row.image)

        
